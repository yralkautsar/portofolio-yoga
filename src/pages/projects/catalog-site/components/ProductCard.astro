---
const { name, price, description, image } = Astro.props;
---

<div class="border rounded-xl p-4 bg-white shadow-sm dark:bg-gray-900 
            transition transform hover:scale-[1.02] hover:shadow-md cursor-pointer">

  <img 
    src={image} 
    alt={name} 
    class="w-full h-48 object-cover rounded-lg mb-4 
           transition-transform duration-300 hover:scale-105"
    data-full={image}
    data-type="product-image"
  />

  <h3 class="font-semibold text-lg mb-1">{name}</h3>
  <p class="text-gray-600 text-sm mb-2">{description}</p>
  <p class="font-bold text-sky-600 mb-4">{price}</p>

  <a 
    href="https://wa.me/6285739497338"
    target="_blank"
    class="block text-center bg-sky-600 text-white py-2 rounded-lg hover:bg-sky-700"
  >
    Order Now
  </a>
</div>
