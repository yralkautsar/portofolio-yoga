---
import BaseLayout from "../layouts/BaseLayout.astro";
import ProjectCard from "../components/ProjectCard.astro";
import SkillBadge from "../components/SkillBadge.astro";
---

<BaseLayout title="Yoga Rizky – Portfolio">

  <!-- HERO -->
  <section id="home" class="pt-28 pb-20">
    <div class="flex flex-col md:flex-row items-center gap-10">
      <!-- Photo -->
      <div class="flex-shrink-0">
        <img src="/images/profile.jpg" alt="Yoga Rizky" class="w-40 h-40 md:w-48 md:h-48 rounded-full object-cover shadow-md border-2 border-gray-100" />
      </div>

      <!-- Text -->
      <div class="flex-1">
        <h1 class="text-4xl md:text-5xl font-extrabold leading-tight mb-3">Hi, I'm <span class="text-sky-600">Yoga</span></h1>
        <p class="text-lg text-gray-600 mb-6">IT Support Supervisor • Web Developer • Tech Enthusiast</p>

        <div class="flex gap-3">
          <a href="#projects" class="inline-block px-5 py-3 bg-sky-600 text-white rounded-lg font-medium shadow-sm hover:bg-sky-700">
            View Projects
          </a>
          <a href="#contact" class="inline-block px-5 py-3 border border-gray-200 rounded-lg text-gray-700 hover:bg-gray-50">
            Contact
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- ABOUT -->
  <section id="about" class="section">
    <div class="grid md:grid-cols-2 gap-8 items-center">
      <div>
        <h2 class="text-2xl font-bold mb-3">About Me</h2>
        <p class="text-gray-700 leading-relaxed mb-4">
          I'm an IT Supervisor based in Indonesia with experience in system administration, team coordination, and web development. I love building performant websites that help small businesses win online.
        </p>
        <p class="text-gray-700">Currently at ICS Travel Group — focusing on operations, automation, and improving internal systems.</p>
      </div>

      <div class="space-y-4">
        <div class="bg-white p-5 rounded-xl shadow-sm">
          <div class="flex justify-between items-center">
            <div>
              <p class="text-sm text-gray-500">Years Experience</p>
              <p class="text-2xl font-bold">5+</p>
            </div>
          </div>
        </div>

        <div class="bg-white p-5 rounded-xl shadow-sm">
          <p class="text-sm text-gray-500 mb-2">Looking for</p>
          <p class="font-medium">Freelance web work, collaborations, or part-time dev roles.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- SKILLS -->
  <section id="skills" class="section">
    <h2 class="text-2xl font-bold mb-6">Skills</h2>
    <div class="flex flex-wrap gap-3">
      <SkillBadge label="Astro" />
      <SkillBadge label="Tailwind CSS" />
      <SkillBadge label="Windows Server" />
      <SkillBadge label="Google Workspace" />
      <SkillBadge label="Synology" />
      <SkillBadge label="Networking" />
      <SkillBadge label="Photoshop" />
    </div>
  </section>

  <!-- PROJECTS -->
  <section id="projects" class="section">
    <h2 class="text-2xl font-bold mb-6">Projects</h2>

    <div class="grid sm:grid-cols-2 gap-6">
      <ProjectCard 
        title="Cafe Landing (Demo)" 
        description="A clean and modern landing page designed to help cafés promote their menu, attract customers, and build a strong online presence."
        tags={['Modern Look', 'Menu Showcase', 'Mobile-Ready', 'Business Oriented']}
        link="/projects/cafe-landing"
      />

      <ProjectCard title="Portfolio Template" description="Starter portfolio template built with Astro for freelancers." tags={['Astro','Design']} />
      <ProjectCard title="Catalog Site" description="Simple product catalog with images and contact integration." tags={['Static','SEO']} />
      <ProjectCard title="Internal Tools" description="Small internal dashboard prototype for operations." tags={['Vue','Prototype']} />
    </div>
  </section>

  <!-- CONTACT -->
  <section id="contact" class="section">
    <h2 class="text-2xl font-bold mb-4">Contact</h2>
    <p class="text-gray-700 mb-4">Interested in working together? Send me an email or message on WhatsApp.</p>

    <div class="flex gap-4 items-center">
      <a href="mailto:yogaralkautsar@gmail.com" class="px-5 py-3 bg-sky-600 text-white rounded-lg">Email Me</a>
      <a href="https://wa.me/6285739497338" target="_blank" class="px-5 py-3 border rounded-lg">WhatsApp</a>
    </div>
  </section>

</BaseLayout>
