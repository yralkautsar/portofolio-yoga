---
const { title, description, tags = [] } = Astro.props;
---

<article class="group bg-white rounded-2xl shadow-sm hover:shadow-lg transition-transform transform hover:-translate-y-1 p-6">
  <h3 class="text-lg font-semibold mb-2">{title}</h3>
  <p class="text-sm text-gray-600 mb-4">{description}</p>

  <div class="flex flex-wrap gap-2">
    {tags.map(tag => (
      <span class="text-xs px-2 py-1 bg-gray-100 rounded-full border border-gray-200">{tag}</span>
    ))}
  </div>
</article>
