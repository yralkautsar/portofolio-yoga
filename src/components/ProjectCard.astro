---
const { title, description, tags = [], link = "#" } = Astro.props;
---

<a href={link} class="block bg-white shadow-sm rounded-lg p-5 border hover:shadow-md transition">
  <h3 class="text-xl font-semibold mb-2">{title}</h3>
  <p class="text-gray-600 mb-4">{description}</p>

  <div class="flex flex-wrap gap-2">
    {tags.map(tag => (
      <span class="text-xs bg-gray-100 px-2 py-1 rounded-md">{tag}</span>
    ))}
  </div>
</a>
