---
/* simple header with minimal look */
---

<header class="fixed inset-x-0 top-0 z-50">
  <div 
    id="nav" 
    class="backdrop-blur bg-white/60 dark:bg-gray-900/60 border-b border-transparent transition-all"
  >
    <div class="max-w-[var(--max-width)] mx-auto px-4 py-4 flex items-center justify-between">
      
      <!-- LOGO -->
      <a href="/" class="text-lg font-semibold tracking-tight">
        Yoga Rizky Alkautsar
      </a>

      <!-- DESKTOP NAV -->
      <nav class="hidden md:flex items-center space-x-6 text-sm">
        <a href="#home" class="hover:text-sky-600 dark:hover:text-sky-400">Home</a>
        <a href="#about" class="hover:text-sky-600 dark:hover:text-sky-400">About</a>
        <a href="#skills" class="hover:text-sky-600 dark:hover:text-sky-400">Skills</a>
        <a href="#projects" class="hover:text-sky-600 dark:hover:text-sky-400">Projects</a>
        <a href="#contact" class="hover:text-sky-600 dark:hover:text-sky-400">Contact</a>

        <!-- DARK MODE TOGGLE -->
        <button
          id="theme-toggle"
          aria-label="Toggle Dark Mode"
          class="p-2 rounded-lg border border-gray-300 dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-800 transition"
        >
          <!-- Light icon (shown in dark mode) -->
          <span id="theme-toggle-light" class="hidden text-xl">LIGHT</span>
          <!-- Dark icon (shown in light mode) -->
          <span id="theme-toggle-dark" class="text-xl">DARK</span>
        </button>
      </nav>

      <!-- MOBILE MENU BUTTON -->
      <div class="md:hidden flex items-center gap-3">

        <!-- DARK MODE BUTTON MOBILE -->
        <button
          id="theme-toggle"
          aria-label="Toggle Dark Mode"
          class="p-2 rounded-lg border border-gray-300 dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-800 transition"
        >
          <span id="theme-toggle-light" class="hidden text-xl">LIGHT</span>
          <span id="theme-toggle-dark" class="text-xl">DARK</span>
        </button>

        <button id="menuToggle" class="p-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-700 dark:text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8h16M4 16h16" />
          </svg>
        </button>

      </div>
    </div>
  </div>

  <script type="module">
    // Header shadow on scroll
    const nav = document.getElementById('nav');
    const onScroll = () => {
      if (window.scrollY > 12) {
        nav.classList.add('shadow-sm', 'bg-white/90', 'dark:bg-gray-900/90', 'border-gray-200', 'dark:border-gray-700');
      } else {
        nav.classList.remove('shadow-sm', 'bg-white/90', 'dark:bg-gray-900/90', 'border-gray-200', 'dark:border-gray-700');
      }
    }
    onScroll();
    window.addEventListener('scroll', onScroll);
  </script>

</header>
