---
/* simple header with minimal look */
---

<header class="fixed inset-x-0 top-0 z-50">
  <div id="nav" class="backdrop-blur bg-white/60 border-b border-transparent transition-all">
    <div class="max-w-[var(--max-width)] mx-auto px-4 py-4 flex items-center justify-between">
      <a href="/" class="text-lg font-semibold tracking-tight">Yoga Rizky Alkautsar</a>

      <nav class="hidden md:flex items-center space-x-6 text-sm">
        <a href="#home" class="hover:text-sky-600">Home</a>
        <a href="#about" class="hover:text-sky-600">About</a>
        <a href="#skills" class="hover:text-sky-600">Skills</a>
        <a href="#projects" class="hover:text-sky-600">Projects</a>
        <a href="#contact" class="hover:text-sky-600">Contact</a>
      </nav>

      <div class="md:hidden">
        <!-- simple mobile anchor list using browser native behaviour - you can expand later -->
        <button id="menuToggle" class="p-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8h16M4 16h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <script type="module">
    // add small behaviour: add shadow when scrolled
    const nav = document.getElementById('nav');
    const onScroll = () => {
      if (window.scrollY > 12) {
        nav.classList.add('shadow-sm', 'bg-white/90', 'border-gray-100');
      } else {
        nav.classList.remove('shadow-sm', 'bg-white/90', 'border-gray-100');
      }
    }
    onScroll();
    window.addEventListener('scroll', onScroll);
  </script>
</header>
